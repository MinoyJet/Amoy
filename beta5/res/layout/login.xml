<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/beijing"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/login_passwd_edit"
        android:layout_width="207dp"
        android:layout_height="24.5dp"
         android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
     android:layout_marginTop="318dp"
        android:layout_marginLeft="97.25dp"
        android:background="@drawable/hbkm"        
        android:hint=" 请 输 入 密 码:123"
        android:password="true"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/login_user_edit"
        android:layout_width="207dp"
        android:layout_height="24.5dp"
         android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
     android:layout_marginTop="261dp"
        android:layout_marginLeft="97.25dp"
        android:background="@drawable/hbkm"        
        android:hint=" 请 输 入 账 号:dada"
       
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="15sp" />

   

    <Button
        android:id="@+id/login_login_btn"
        android:layout_width="105dp"
        android:layout_height="49.5dp"
    android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
   android:layout_marginBottom="149.5dp"
        android:background="@drawable/denglu"
        android:onClick="login_xinzou"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="251dp"
        android:src="@drawable/zhanghao" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
                android:layout_marginTop="308dp"
        
                android:layout_marginLeft="49dp"
        
      
        android:src="@drawable/mima" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
android:layout_centerHorizontal="true"
        android:src="@drawable/touxiang2" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="15dp" >
    </RelativeLayout>

    <Button
        android:id="@+id/forget_passwd"
        android:layout_width="130dp"
        android:layout_height="21.6dp"
        android:layout_alignRight="@+id/login_passwd_edit"
        android:layout_alignTop="@+id/relativeLayout1"
        android:background="@drawable/fd"
        android:onClick="login_register"
        android:textColor="#00f"
        android:textSize="16sp" />

</RelativeLayout>
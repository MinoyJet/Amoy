<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/beijing"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="164.5dp"
        android:src="@drawable/zhanghao" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="221.5dp"
        android:src="@drawable/mima" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="278.5dp"
        android:src="@drawable/mima" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="335.5dp"
        android:src="@drawable/email" />

    <ImageButton
        android:id="@+id/btnzhuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="179dp"
android:layout_marginTop="423dp"
        android:background="@drawable/zhuce"
        android:onClick="zhucu_in"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/login_passwd_edit"
        android:layout_width="207dp"
        android:layout_height="24.5dp"
  android:layout_alignParentLeft="true"
  android:layout_alignParentTop="true"
  android:layout_marginLeft="97.25dp"
  android:layout_marginTop="231.5dp"
        android:background="@drawable/hbkm"
        android:ems="10"
        android:hint="  请  输  入  密  码"
        android:password="true"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="15sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/login_passwd_yes"
        android:layout_width="207dp"
        android:layout_height="24.5dp"
     android:layout_alignParentLeft="true"
     android:layout_alignParentTop="true"
     android:layout_marginLeft="97.25dp"
     android:layout_marginTop="288.5dp"
        android:background="@drawable/hbkm"
        android:ems="10"
        android:hint="  请  确  认  密  码"
        android:password="true"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/login_passwd_mail"
        android:layout_width="207dp"
        android:layout_height="24.5dp"
android:layout_alignParentTop="true"
android:layout_alignParentLeft="true" 
android:layout_marginTop="345.5dp"
android:layout_marginLeft="97.25dp"
       android:background="@drawable/hbkm"
        android:ems="10"
        android:hint="  请  输  入  邮  箱"
        android:password="true"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_passwd_mail"
        android:layout_centerHorizontal="true" >
    </RelativeLayout>

    <EditText
        android:id="@+id/login_user_edit"
        android:layout_width="207dp"
        android:layout_height="24.5dp"
     android:layout_alignParentLeft="true"
     android:layout_alignParentTop="true"
     android:layout_marginLeft="97.25dp"
     android:layout_marginTop="174.5dp"
        android:background="@drawable/hbkm"
        android:ems="10"
        android:hint="  请  确  认  账  号"
        android:password="true"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/wenhao" />

    <ImageButton
        android:id="@+id/quxiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="48.5dp"
android:layout_marginTop="425dp"
        android:background="@drawable/cancel"
        android:onClick="zhucu_back"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>